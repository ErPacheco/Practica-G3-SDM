<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.passAndFiles.PassDetailFragment">

    <TextView
        android:id="@+id/passwordDetailTITLE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="104dp"
        android:text="@string/password_input_detail"
        android:textColor="@color/primary_color"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/inputNameLabel"
        android:layout_width="316dp"
        android:layout_height="19dp"
        android:layout_marginTop="24dp"
        android:text="@string/input_name_label"
        android:textColor="@color/third_color"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/passwordDetailTITLE"
        tools:ignore="SmallSp" />

    <TextView
        android:id="@+id/usernameDetail"
        android:layout_width="316dp"
        android:layout_height="30dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/bottom_border"
        android:text="@string/default_text"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/inputUsernameLabel" />

    <TextView
        android:id="@+id/inputURILabel"
        android:layout_width="316dp"
        android:layout_height="19dp"
        android:layout_marginTop="60dp"
        android:text="@string/uri"
        android:textColor="@color/third_color"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/passwordDetailInput"
        tools:ignore="SmallSp" />

    <TextView
        android:id="@+id/URIDetail"
        android:layout_width="316dp"
        android:layout_height="30dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/bottom_border"
        android:text="@string/default_text"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/inputURILabel" />

    <TextView
        android:id="@+id/inputUsernameLabel"
        android:layout_width="316dp"
        android:layout_height="19dp"
        android:layout_marginTop="24dp"
        android:text="@string/input_username"
        android:textColor="@color/third_color"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/emailDetail"
        tools:ignore="SmallSp" />

    <TextView
        android:id="@+id/titleDetail"
        android:layout_width="316dp"
        android:layout_height="25dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/bottom_border"
        android:text="@string/default_text"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/inputNameLabel" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/editPasswordButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="48dp"
        android:layout_marginBottom="92dp"
        android:backgroundTint="@color/third_color"
        android:clickable="true"
        android:contentDescription="@string/edit_password_input"
        android:src="@drawable/ic_baseline_edit_24"
        android:tint="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:rippleColor="#FFFFFF" />

    <TextView
        android:id="@+id/inputEmailUsernameLabel"
        android:layout_width="316dp"
        android:layout_height="19dp"
        android:layout_marginTop="24dp"
        android:text="@string/input_email"
        android:textColor="@color/third_color"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleDetail"
        tools:ignore="SmallSp" />

    <TextView
        android:id="@+id/emailDetail"
        android:layout_width="316dp"
        android:layout_height="30dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/bottom_border"
        android:text="@string/default_text"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/inputEmailUsernameLabel" />

    <TextView
        android:id="@+id/inputPasswordLabel"
        android:layout_width="316dp"
        android:layout_height="19dp"
        android:layout_marginTop="24dp"
        android:text="@string/input_password"
        android:textColor="@color/third_color"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/usernameDetail"
        tools:ignore="SmallSp" />

    <TextView
        android:id="@+id/passwordDetailInput"
        android:layout_width="316dp"
        android:layout_height="30dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/bottom_border"
        android:inputType="textPassword"
        android:text="@string/default_text"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/inputPasswordLabel"
        tools:ignore="TextViewEdits" />

    <ImageButton
        android:id="@+id/viewButton"
        style="@style/Widget.AppCompat.ImageButton"
        android:layout_width="34dp"
        android:layout_height="23dp"
        android:layout_marginTop="460dp"
        android:background="#00FFFFFF"
        android:clickable="true"
        android:contentDescription="@string/viewbutton"
        android:outlineProvider="none"
        android:src="@drawable/ic_baseline_remove_red_eye_24"
        app:layout_constraintEnd_toStartOf="@+id/copyButton"
        app:layout_constraintHorizontal_bias="0.8"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/copyButton"
        style="@style/Widget.AppCompat.ImageButton"
        android:layout_width="34dp"
        android:layout_height="23dp"
        android:layout_marginTop="460dp"
        android:background="#00FFFFFF"
        android:clickable="true"
        android:contentDescription="@string/copybutton"
        android:outlineProvider="none"
        android:src="@drawable/ic_baseline_content_copy_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.247"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/passBreaches"
        android:layout_width="35dp"
        android:layout_height="23dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="460dp"
        android:backgroundTint="#00FFFFFF"
        android:src="@drawable/ic_baseline_vpn_lock_24"
        android:tint="@color/primary_color"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/copyButton"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="@string/passwordbreachbutton" />

    <ProgressBar
        android:id="@+id/progressBarAPI"
        style="?android:attr/progressBarStyle"
        android:layout_width="36dp"
        android:layout_height="31dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="188dp"
        android:layout_marginBottom="300dp"
        android:indeterminateTint="@color/secondary_color"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/passBreaches" />

</androidx.constraintlayout.widget.ConstraintLayout>