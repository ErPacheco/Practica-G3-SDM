<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.uc3m.whatthepass">

    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.INTERNET" />

    <uses-feature android:name="android.hardware.type.watch" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_wtp"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_wtp_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.WhatThePass">
        <activity
            android:name=".views.splashScreen.SplashScreenActivity"
            android:theme="@style/Theme.AppCompat.DayNight.NoActionBar" />

        <activity android:name=".views.passwordGeneration.PasswordGeneratorActivity" />
        <activity android:name=".views.passAndFiles.PassAndFilesActivity" />
        <activity android:name=".views.login.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>